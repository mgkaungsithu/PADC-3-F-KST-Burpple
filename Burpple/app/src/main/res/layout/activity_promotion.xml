<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cv_promotion"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_food_promotions"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/testcard"
        android:alpha="0.5" />

    <TextView
        android:id="@+id/tv_burpple_elclusive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BURPPLE EXCLUSIVE"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:background="@color/accent"
        android:textColor="@color/title_text_color"
        android:textSize="8sp"
        />

    <TextView
        android:id="@+id/tv_promotion_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="20% Off Total Bill"
        android:layout_marginTop="60dp"
        android:paddingLeft="8dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:textColor="@color/white_text" />

    <TextView
        android:id="@+id/tv_promotion_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TILL 31st January 2018"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:textColor="@color/white_text" />

    <TextView
        android:id="@+id/tv_promotion_shop_name"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginTop="160dp"
        android:text="IndoChilli(Savourwo... "
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:background="@color/burpple_exclusive"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tv_promotion_shop_area"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:text="Hledan"
        android:paddingLeft="12dp"
        android:layout_below="@id/tv_promotion_shop_name"
        android:textColor="@color/secondary_text"
        android:background="@color/burpple_exclusive"
        android:textSize="12sp"/>
</android.support.v7.widget.CardView>